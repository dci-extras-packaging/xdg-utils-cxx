#!/usr/bin/make -f
# -*- makefile -*-

export DEB_BUILD_MAINT_OPTIONS=hardening=+all

%:
	dh $@ --with pkgkde_symbolshelper
	
override_dh_clean:
	dh_clean

override_dh_auto_configure:
	dh_auto_configure -- -DXDG_UTILS_SHARED=ON -DXDG_UTILS_TESTS=ON	-DGTEST_ROOT=/usr/src/googletest -DCMAKE_BUILD_TYPE=Release
